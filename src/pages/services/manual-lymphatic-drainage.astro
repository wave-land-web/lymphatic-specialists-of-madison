            <ListItem number={9} text="Lipedema" />
            <ListItem number={10} text="Edema" />
            <ListItem number={11} text="Lymphedema" />
            <ListItem number={12} text="Post-mastectomy swelling" />
            <ListItem number={13} text="Lumpectomy" />
            <ListItem number={14} text="Gender-affirming surgery" />
            <ListItem number={15} text="Post Concussion" />
          </div>
        </ul>
      </div>
    </section>

    <!-- Contraindications Section -->
    <ThemedSection id="contraindications" class="bg-primary/5">
      <div
        class="wrapper container lg:max-w-screen-xl flex flex-col gap-(--site-padding-md) mx-auto"
      >
        <h2 class="h1 text-center lsa lsa-slide-up no-repeat">Contraindications</h2>
        <p class="h4 text-center mx-auto lsa lsa-slide-up no-repeat">
          Although MLD is beneficial for a number of conditions, it is not for everybody. Please
          note that we may need to contact your health care provider for further information on your
          condition or to proceed with treatment. Contraindications include:
        </p>

        <ul
          class="grid grid-cols-1 md:grid-cols-2 gap-(--site-padding-base) w-full max-w-4xl mx-auto"
        >
          <div class="list">
            <ListItem number={1} text="Congestive heart failure" />
            <ListItem number={2} text="DVT" />
            <ListItem number={3} text="Kidney disorders" />
            <ListItem number={4} text="Acute infection/malignancies" />

            <!-- Mobile only -->
