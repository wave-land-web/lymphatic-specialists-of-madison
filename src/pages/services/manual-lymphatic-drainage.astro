            <ListItem listItemClass="md:hidden" number={6} text="Acute cold/flu" />
            <ListItem listItemClass="md:hidden" number={7} text="Fever" />
            <ListItem listItemClass="md:hidden" number={8} text="Some medications" />
          </div>

          <!-- Desktop only -->
