            <div class="list">
              <ListItem
                number={1}
                listItemClass="text-base-content"
                text="Autoimmune diseases (such as rheumatoid arthritis, fibromyalgia, lupus and chronic fatigue syndrome)"
              />
              <ListItem number={2} listItemClass="text-base-content" text="Neuropathy" />
              <ListItem number={3} listItemClass="text-base-content" text="Migraines/Headaches" />
