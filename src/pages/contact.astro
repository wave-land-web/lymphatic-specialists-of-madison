---
import Card from '../components/ui/Card.astro'
import PageHeader from '../components/ui/PageHeader.astro'
import Layout from '../layouts/Layout.astro'
import NewsletterSubscribe from '../components/ui/NewsletterSubscribe.astro'
---

<Layout title="Contact - Madison Lymphatics & Manual Therapy">
  <PageHeader className="items-center mx-auto text-center">
    <h1 class="mb-4 text-primary text-shadow-lg lsa lsa-slide-up no-repeat">Contact Us</h1>
    <p class="text-shadow-lg lsa lsa-slide-up delay-100 no-repeat">
      Get in touch with Madison Lymphatics & Manual Therapy. We're here to answer your questions and
      help you schedule your appointment.
    </p>
  </PageHeader>

  <main class="wrapper container lg:max-w-screen-2xl mx-auto">
    <!-- Contact Information Section -->
    <section
      class="lg:max-w-6xl mx-auto pt-(--site-padding-base) border-b border-base-300 lsa lsa-slide-up no-repeat"
    >
      <Card id="contact-information">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-(--site-padding-lg)">
          <!-- Left Column - Contact Info -->
          <div class="space-y-6">
            <!-- Call Us Section -->
            <div>
              <h2 class="card-title text-primary mb-4">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
                Call Us
              </h2>
              <div class="flex flex-col gap-2">
                <p class="font-semibold">Phone:</p>
                <a href="tel:6082038550" class="link-primary text-xl transition-colors">
                  (608) 203-8550
                </a>
                <p class="text-base-content/80">
                  Call us to schedule your appointment or if you have any questions about our
                  services. We're here to help you on your health journey.
                </p>
              </div>
            </div>

            <div class="divider"></div>

            <!-- Visit Us Section -->
            <div class="flex flex-col gap-2">
              <h2 class="card-title text-primary mb-4">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                Visit Us
              </h2>
              <p class="font-semibold">Address:</p>
              <p class="text-base-content/80">
                2453 Atwood Avenue Suite 210<br />
                Madison, WI 53704
              </p>
            </div>

            <!-- Action Buttons -->
            <div class="flex flex-wrap gap-3 mt-6">
              <a href="tel:6082038550" class="btn btn-primary">Call Now</a>
              <a
                href="https://booksy.com/en-us/689566_madison-lymphatics-and-bodywork_massage_39663_madison"
                target="_blank"
                rel="noopener noreferrer"
                class="btn btn-dash"
              >
                Book Online
              </a>
            </div>
          </div>

          <!-- Right Column - Contact Form -->
          <div class="space-y-6">
            <h3 class="text-lg text-primary">Send Us a Message</h3>
            <p class="text-base-content/80">
              Have a question or want to learn more about our services? Fill out the form below and
              we'll get back to you as soon as possible.
            </p>

            <form class="flex flex-col gap-4" method="POST" action="#" id="contact-form">
              <p class="text-sm text-base-content/80">
                <span class="text-accent">*</span> indicates required fields
              </p>

              <!-- Name Fields -->
              <fieldset class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="flex flex-col gap-2">
                  <label for="first-name">
                    First Name <span class="text-accent">*</span>
                  </label>
                  <input
                    type="text"
                    id="first-name"
                    name="first-name"
                    placeholder="Jane"
                    class="input input-bordered w-full"
                    required
                  />
                </div>

                <div class="flex flex-col gap-2">
                  <label for="last-name">
                    Last Name <span class="text-accent">*</span>
                  </label>
                  <input
                    type="text"
                    id="last-name"
                    name="last-name"
                    placeholder="Doe"
                    class="input input-bordered w-full"
                    required
                  />
                </div>
              </fieldset>

              <!-- Phone Number -->
              <fieldset class="flex flex-col gap-2">
                <label for="phone-number">Phone Number</label>
                <input
                  type="tel"
                  id="phone-number"
                  name="phone-number"
                  placeholder="(123) 456-7890"
                  class="input input-bordered w-full"
                />
              </fieldset>

              <!-- Email Address -->
              <fieldset class="flex flex-col gap-2">
                <label for="email-address">
                  Email Address <span class="text-accent">*</span>
                </label>
                <input
                  type="email"
                  id="email-address"
                  name="email-address"
                  placeholder="your.email@example.com"
                  class="input input-bordered w-full"
                  required
                />
              </fieldset>

              <!-- Message -->
              <fieldset class="flex flex-col gap-2">
                <label for="message-body">Message</label>
                <textarea
                  id="message-body"
                  name="message-body"
                  class="textarea h-32 w-full rounded-box"
                  placeholder="Tell us about your needs or ask any questions you have about our services."
                ></textarea>
              </fieldset>

              <!-- Submit Button -->
              <button type="submit" class="btn btn-primary w-full">Submit</button>

              <fieldset>
                <label class="label cursor-pointer justify-center whitespace-normal">
                  <input type="checkbox" class="checkbox checkbox-primary mr-2" />
                  <span>Subscribe to our newsletter for updates and wellness tips</span>
                </label>
              </fieldset>
            </form>
          </div>
        </div>
      </Card>
    </section>

    <!-- Google Maps Section - Full Width at Bottom -->
    <section class="lsa lsa-slide-up no-repeat">
      <div class="mb-8 mx-auto max-w-2xl">
        <h2 class="text-center text-primary mb-4">Our Location</h2>
        <p class="text-center text-base-content/80">
          Find us at the Atwood Professional Building with convenient parking available.
        </p>
      </div>
      <div
        class="w-full h-96 lg:h-[500px] border border-base-300 rounded-box overflow-hidden shadow-sm"
      >
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2915.5423823934284!2d-89.34526!3d43.093742!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8806538a38a4ef87%3A0xbb912af2f2ecd39f!2sATWOOD%20PROFESSIONAL%20BUILDING!5e0!3m2!1sen!2sus!4v1635959999999!5m2!1sen!2sus"
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="Madison Lymphatics & Manual Therapy Location"></iframe>
      </div>
    </section>

    <section id="call-to-action">
      <NewsletterSubscribe />
    </section>
  </main>

  <script>
    // Basic form handling (frontend only as requested)
    const contactForm = document.getElementById('contact-form') as HTMLFormElement
    contactForm?.addEventListener('submit', function (e) {
      e.preventDefault()

      // Get form data
      const formData = new FormData(this)
      const data: Record<string, string> = {}

      // Convert FormData to object with proper typing
      formData.forEach((value, key) => {
        if (typeof value === 'string') {
          data[key] = value
        }
      })

      // Basic validation
      if (!data['first-name'] || !data['last-name'] || !data['email-address']) {
        alert('Please fill in all required fields.')
        return
      }

      // Email validation
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/
      if (!emailRegex.test(data['email-address'])) {
        alert('Please enter a valid email address.')
        return
      }

      // Show success message (since this is frontend only)
      alert(
        'Thank you for your message! We will get back to you soon. For immediate assistance, please call (608) 203-8550.'
      )

      // Reset form
      this.reset()
    })
  </script>
</Layout>
