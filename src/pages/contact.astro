---
import PageTitle from '../components/text/PageTitle.astro'
import Card from '../components/ui/Card.astro'
import PageHeader from '../components/ui/PageHeader.astro'
import Layout from '../layouts/Layout.astro'
---

<Layout
  title="Contact"
  description="Get in touch with Lymphatic Specialists of Madison. We're here to answer your questions andhelp you schedule your appointment."
>
  <PageHeader class="items-center mx-auto text-center">
    <PageTitle>Contact Us</PageTitle>
    <p class="h4 lsa lsa-slide-up delay-100 no-repeat">
      Get in touch with Lymphatic Specialists of Madison. We're here to answer your questions and
      help you schedule your appointment.
    </p>
  </PageHeader>

  <main class="wrapper container lg:max-w-screen-2xl mx-auto">
    <!-- Contact Information Section -->
    <section
      class="lg:max-w-screen-xl mx-auto pt-(--site-padding-base) border-b border-base-200 lsa lsa-slide-up no-repeat group"
    >
      <Card id="contact-information">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-(--site-padding-lg)">
          <!-- Left Column - Contact Info -->
          <div class="space-y-6">
            <!-- Call Us Section -->
            <div>
              <h2 class="card-title text-primary mb-(--site-padding-base)">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
                Call Us
              </h2>
              <div class="flex flex-col gap-2">
                <p class="font-semibold">Phone:</p>
                <a href="tel:6083582082" class="link-primary h4 transition-colors">
                  (608) 358-2082
                </a>
                <p>
                  Call us to schedule your appointment or if you have any questions about our
                  services. We're here to help you on your health journey.
                </p>
              </div>
            </div>

            <div class="divider"></div>

            <!-- Visit Us Section -->
            <div class="flex flex-col gap-2">
              <h2 class="card-title text-primary mb-(--site-padding-base)">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                Visit Us
              </h2>
              <p class="font-semibold">Address:</p>
              <p>
                2453 Atwood Avenue Suite 210<br />
                Madison, WI 53704
              </p>
            </div>

            <!-- Action Buttons -->
            <div class="flex flex-wrap gap-3 mt-6">
              <a href="tel:6083582082" class="btn btn-primary">Call Now</a>
              <a
                href="https://booksy.com/en-us/1554807_lymphatic-specialists-of-madison_massage_39663_madison#ba_s=sh_1"
                target="_blank"
                rel="noopener noreferrer"
                class="btn btn-dash"
              >
                Book Online
              </a>
            </div>
          </div>

          <!-- Right Column - Contact Form -->
          <div class="space-y-6">
            <h2 class="card-title text-primary">Send Us a Message</h2>
            <p>
              Have a question or want to learn more about our services? Fill out the form below and
              we'll get back to you as soon as possible.
            </p>

            <form
              class="flex flex-col gap-(--site-padding-base)"
              method="POST"
              action="/api/forms/contact"
              id="contact-form"
            >
              <p>
                <span class="text-accent">*</span> indicates required fields
              </p>

              <!-- Name Fields -->
              <fieldset class="grid grid-cols-1 md:grid-cols-2 gap-(--site-padding-base)">
                <div class="flex flex-col gap-2">
                  <label for="first-name">
                    First Name <span class="text-accent">*</span>
                  </label>
                  <input
                    type="text"
                    id="first-name"
                    name="first-name"
                    placeholder="Jane"
                    class="input input-bordered w-full"
                    required
                  />
                </div>

                <div class="flex flex-col gap-2">
                  <label for="last-name">
                    Last Name <span class="text-accent">*</span>
                  </label>
                  <input
                    type="text"
                    id="last-name"
                    name="last-name"
                    placeholder="Doe"
                    class="input input-bordered w-full"
                    required
                  />
                </div>
              </fieldset>

              <!-- Phone Number -->
              <fieldset class="flex flex-col gap-2">
                <label for="phone-number">Phone Number</label>
                <input
                  type="tel"
                  id="phone-number"
                  name="phone-number"
                  placeholder="(123) 456-7890"
                  class="input input-bordered w-full"
                />
              </fieldset>

              <!-- Email Address -->
              <fieldset class="flex flex-col gap-2">
                <label for="email-address">
                  Email Address <span class="text-accent">*</span>
                </label>
                <input
                  type="email"
                  id="email-address"
                  name="email-address"
                  placeholder="your.email@example.com"
                  class="input input-bordered w-full"
                  required
                />
              </fieldset>

              <!-- Message -->
              <fieldset class="flex flex-col gap-2">
                <label for="message">Message</label>
                <textarea
                  id="message"
                  name="message"
                  class="textarea h-32 w-full rounded-box"
                  placeholder="Tell us about your needs or ask any questions you have about our services."
                ></textarea>
              </fieldset>

              <!-- Submit Button -->
              <button type="submit" class="btn btn-primary w-full">Submit</button>

              <fieldset>
                <label
                  for="newsletter-subscribe"
                  class="label cursor-pointer justify-center whitespace-normal"
                >
                  <input
                    id="newsletter-subscribe"
                    name="newsletter-subscribe"
                    type="checkbox"
                    class="checkbox checkbox-primary mr-2"
                  />
                  <span>Subscribe to our newsletter for updates and wellness tips</span>
                </label>
              </fieldset>
            </form>

            <div id="form-messages">
              <!-- Success message will be displayed here -->
              <p id="form-message-text"></p>
            </div>
          </div>
        </div>
      </Card>
    </section>

    <!-- Google Maps Section - Full Width at Bottom -->
    <section class="lsa lsa-slide-up no-repeat">
      <div class="flex flex-col gap-(--site-padding-base) mb-(--site-padding-md) mx-auto max-w-2xl">
        <h2 class="h1 text-center text-primary">Our Location</h2>
        <p class="h4 text-center">
          Find us at the Atwood Professional Building with convenient parking available.
        </p>
      </div>
      <div
        class="w-full h-96 lg:h-[500px] border border-base-200 rounded-box overflow-hidden shadow-sm"
      >
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2915.5423823934284!2d-89.34526!3d43.093742!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8806538a38a4ef87%3A0xbb912af2f2ecd39f!2sATWOOD%20PROFESSIONAL%20BUILDING!5e0!3m2!1sen!2sus!4v1635959999999!5m2!1sen!2sus"
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="Lymphatic Specialists of Madison Location"></iframe>
      </div>
    </section>
  </main>
</Layout>

<script>
  // Handle form submission with API submission
  const contactForm = document.getElementById('contact-form') as HTMLFormElement
  const messageText = document.getElementById('form-message-text') as HTMLParagraphElement

  contactForm?.addEventListener('submit', async function (e) {
    e.preventDefault()

    // Get submit button and show loading state
    const submitButton = this.querySelector('button[type="submit"]') as HTMLButtonElement
    const originalText = submitButton.textContent
    submitButton.disabled = true
    submitButton.textContent = 'Submitting...'

    try {
      // Get form data
      const formData = new FormData(this)

      // Basic validation
      const firstName = formData.get('first-name') as string
      const lastName = formData.get('last-name') as string
      const emailAddress = formData.get('email-address') as string

      if (!firstName || !lastName || !emailAddress) {
        throw new Error('Please fill in all required fields.')
      }

      // Email validation
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/
      if (!emailRegex.test(emailAddress)) {
        throw new Error('Please enter a valid email address.')
      }

      // Submit to API
      const response = await fetch('/api/forms/contact', {
        method: 'POST',
        body: formData,
      })

      const result = await response.json()

      if (result.success) {
        // Show success message
        messageText.innerHTML = `<strong>${result.message || 'Thank you for contacting us! We will get back to you shortly.'}</strong>`
        messageText.classList.remove('text-error')
        messageText.classList.add('text-success')

        // Reset form
        this.reset()
      } else {
        // Show error message
        messageText.innerHTML = `<strong>${result.error || 'An error occurred while submitting the form.'}</strong>`
        messageText.classList.remove('text-success')
        messageText.classList.add('text-error')

        throw new Error(result.error || 'An error occurred while submitting the form.')
      }
    } catch (error) {
      // Show error message
      const errorMessage = error instanceof Error ? error.message : 'An unexpected error occurred.'
      messageText.innerHTML = `<strong>${errorMessage || 'An unexpected error occurred.'}</strong>`
      messageText.classList.remove('text-success')
      messageText.classList.add('text-error')

      throw new Error(errorMessage || 'An unexpected error occurred.')
    } finally {
      // Reset button state
      submitButton.disabled = false
      submitButton.textContent = originalText
    }
  })
</script>
