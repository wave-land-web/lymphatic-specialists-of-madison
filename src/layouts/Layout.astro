---
import { Font } from 'astro:assets'
import { SITE_DESCRIPTION, SITE_TITLE, SITE_URL } from '../consts'
import '../styles/global.css'
import Navigation from '../components/ui/Navigation.astro'
import Footer from '../components/ui/Footer.astro'
import NewsletterSubscribe from '../components/ui/NewsletterSubscribe.astro'

export interface Props {
  title?: string
  description?: string
  socialImage?: string
}

const { title = SITE_TITLE, description = SITE_DESCRIPTION, socialImage } = Astro.props
const canonicalURL = new URL(Astro.url.pathname, Astro.site)
const socialImageURL = new URL(socialImage || '/images/og.jpg', canonicalURL)
---

<html lang="en" data-theme="emerald">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SEO -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL} />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- Facebook -->
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImageURL} />
    <meta property="og:image:width" content="1600" />
    <meta property="og:image:height" content="840" />
    <meta property="og:image:type" content="image/png" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:domain" content={SITE_URL} />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={socialImageURL} />

    <!-- Preload Fonts -->
    <Font cssVariable="--font-nuckle-thin" preload />
    <Font cssVariable="--font-nuckle-semibold" preload />
    <Font cssVariable="--font-nuckle-regular" preload />
    <Font cssVariable="--font-nuckle-medium" preload />
    <Font cssVariable="--font-nuckle-light" preload />
    <Font cssVariable="--font-nuckle-hairline" preload />
    <Font cssVariable="--font-nuckle-extralight" preload />
    <Font cssVariable="--font-nuckle-bold" preload />
    <Font cssVariable="--font-copernicus-italic" preload />
    <Font cssVariable="--font-copernicus-regular" preload />
    <Font cssVariable="--font-copernicus-regular-2" preload />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="LSOM" />
    <link rel="manifest" href="/site.webmanifest" />
  </head>

  <body>
    <Navigation />
    <slot />
    <section id="call-to-action">
      <NewsletterSubscribe />
    </section>
    <Footer />
  </body>
</html>

<script>
  import lsa from '../lib/lsa.ts'

  // Initialize LSA animations on page load
  lsa()
</script>
