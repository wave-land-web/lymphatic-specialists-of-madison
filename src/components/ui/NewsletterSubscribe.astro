<div class="wrapper text-center prose lg:prose-xl">
  <h2 class="lsa lsa-slide-up no-repeat">Subscribe to Our Newsletter</h2>
  <p class="max-w-2xl mx-auto lsa lsa-slide-up delay-100 no-repeat">
    Join our community and get expert tips, health insights, and updates about lymphatic health
    delivered to your inbox.
  </p>

  <!-- Email Subscribe Form -->
  <div class="mb-(--site-padding-md) max-w-md mx-auto lsa lsa-slide-up delay-200 no-repeat">
    <form id="newsletter-form" class="join w-full">
      <input
        id="email"
        type="email"
        name="email"
        placeholder="Enter your email address"
        class="input input-bordered input-accent join-item flex-1"
        required
      />
      <label class="sr-only" for="email">Email</label>
      <button type="submit" class="btn btn-accent join-item" id="submit-btn">
        <span id="submit-text">Subscribe</span>
        <span id="loading-spinner" class="loading loading-spinner loading-sm hidden"></span>
      </button>
    </form>

    <!-- Success/Error Messages -->
    <div id="form-message" class="mt-4 text-sm" role="alert" aria-live="polite"></div>

    <p class="text-sm mt-2">No spam, unsubscribe anytime. We respect your privacy.</p>
  </div>

  <!-- Primary and Secondary CTAs -->
  <div
    class="flex flex-wrap gap-2 justify-center items-center lsa lsa-slide-up delay-300 no-repeat"
  >
    <a href="/contact" class="btn btn-accent">
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
        ></path>
      </svg>
      Contact Us
    </a>
    <a href="/blog" class="btn btn-dash text-base-content">
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
        ></path>
      </svg>
      Learn More From Our Blog
    </a>
  </div>
</div>

<script>
  // Newsletter subscription form handling
  document.addEventListener('DOMContentLoaded', function () {
    const form = document.getElementById('newsletter-form') as HTMLFormElement
    const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement
    const submitText = document.getElementById('submit-text') as HTMLSpanElement
    const loadingSpinner = document.getElementById('loading-spinner') as HTMLSpanElement
    const messageDiv = document.getElementById('form-message') as HTMLDivElement
    const emailInput = document.getElementById('email') as HTMLInputElement

    if (!form || !submitBtn || !submitText || !loadingSpinner || !messageDiv || !emailInput) {
      console.error('Newsletter form elements not found')
      return
    }

    form.addEventListener('submit', async (e) => {
      e.preventDefault()

      // Reset messages
      messageDiv.textContent = ''
      messageDiv.className = 'mt-4 text-sm'

      // Get form data
      const formData = new FormData(form)

      // Show loading state
      setLoadingState(true)

      try {
        const response = await fetch('/api/forms/subscribe.json', {
          method: 'POST',
          body: formData,
        })

        const result = await response.json()

        if (result.success) {
          showMessage(result.message || 'Successfully subscribed!', 'success')
          emailInput.value = '' // Clear the input
        } else {
          showMessage(result.error || 'Failed to subscribe. Please try again.', 'error')
        }
      } catch (error) {
        console.error('Subscription error:', error)
        showMessage('Network error. Please check your connection and try again.', 'error')
      } finally {
        setLoadingState(false)
      }
    })

    function setLoadingState(loading: boolean) {
      if (loading) {
        submitText.classList.add('hidden')
        loadingSpinner.classList.remove('hidden')
        submitBtn.disabled = true
        emailInput.disabled = true
      } else {
        submitText.classList.remove('hidden')
        loadingSpinner.classList.add('hidden')
        submitBtn.disabled = false
        emailInput.disabled = false
      }
    }

    function showMessage(message: string, type: 'success' | 'error') {
      messageDiv.textContent = message

      if (type === 'success') {
        messageDiv.className = 'mt-4 text-sm font-bold text-success'
      } else {
        messageDiv.className = 'mt-4 text-sm text-error'
      }
    }
  })
</script>
