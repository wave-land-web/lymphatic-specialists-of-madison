---
import type { ImageMetadata } from 'astro'
import { Image } from 'astro:assets'

export interface TeamBioCardProps {
  name: string
  jobTitle: string
  image: ImageMetadata
}

const { name, jobTitle, image } = Astro.props as TeamBioCardProps
---

<aside
  class="md:sticky md:top-[calc(var(--nav-height)+var(--site-padding-base))] max-w-[275px] mx-auto md:self-start md:flex-shrink-0 text-center"
>
  <div class="avatar mb-4">
    <div
      class="ring-base-300 group-hover:ring-primary max-md:group-[.active]:ring-primary ring-offset-base-100 w-[clamp(128px,20vw,192px)] rounded-full ring-2 ring-offset-2 transition-all duration-200"
    >
      <Image width={image.width} height={image.height} src={image.src} alt={name} />
    </div>
  </div>
  <h3 class="text-primary mb-2">{name}</h3>
  <p class="font-semibold mb-4">{jobTitle}</p>
</aside>
