---
import { getImage } from 'astro:assets'
import heroBackground from '../../assets/images/placeholder-3.jpg'

export interface Props {
  className?: string
}

const { className } = Astro.props

const heroBackgroundImage = await getImage({ src: heroBackground })
---

<header class="hero md:bg-fixed" style={`background-image: url(${heroBackgroundImage.src})`}>
  <div class="hero-overlay bg-black/60"></div>
  <div class="wrapper">
    <div
      class={`${className} flex flex-col gap-4 pt-[calc(var(--site-padding-lg)+var(--nav-height))] pb-(--site-padding-lg) text-neutral-content`}
    >
      <slot />
    </div>
  </div>
</header>
