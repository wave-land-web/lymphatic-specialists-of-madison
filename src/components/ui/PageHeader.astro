---
import { getImage } from 'astro:assets'
import heroBackground from '../../assets/images/hero-background.jpg'

const heroBackgroundImage = await getImage({ src: heroBackground })
---

<header class="hero" style={`background-image: url(${heroBackgroundImage.src})`}>
  <div class="hero-overlay bg-black/60"></div>
  <div
    class="flex flex-col gap-4 max-w-4xl mr-auto px-(--site-padding-base) py-(--site-padding-lg) text-neutral-content"
  >
    <slot />
  </div>
</header>
